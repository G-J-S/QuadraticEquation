<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guilherme.equa2grau.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="A"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="number|numberSigned"
        android:ems="10"
        android:id="@+id/editTextA"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="0"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="B"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextA"
        android:layout_toEndOf="@+id/editTextA"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:id="@+id/editTextB"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="0"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="C"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextB"
        android:layout_toEndOf="@+id/editTextB"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="number|numberSigned"
        android:ems="10"
        android:id="@+id/editTextC"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="0"
        android:autoText="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/buttonCalc"
        android:layout_marginTop="61dp"
        android:onClick="calc"
        android:enabled="true"
        android:layout_below="@+id/editTextB"
        android:layout_toRightOf="@+id/editTextB"
        android:layout_toEndOf="@+id/editTextB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/textViewResult"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>
